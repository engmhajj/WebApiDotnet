@model List<Shirt>
	@if (TempData["Success"] != null)
	{
	<div class="alert alert-success">@TempData["Success"]</div>
	}

	<h3>
		Shirts
	</h3>
	<div class="text-danger" asp-validation-summary="All"> </div>
	<br>
	@if (Model != null)
	{
	<table class="table table-striped">
		<thead>
			<tr>
				<td>
					Brand
				</td>
				<td>
					Gender
				</td>
				<td>
					Color
				</td>
				<td>
					Size
				</td>
				<td>
					Price
				</td>
				<td>
				</td>
				<td>
				</td>

			</tr>
		</thead>
		<tbody>
			@foreach (var shirt in Model)
			{
			<tr>
				<td>
					@shirt.Brand
				</td>
				<td>
					@shirt.Gender
				</td>
				<td>
					@shirt.Color
				</td>
				<td>
					@shirt.Size
				</td>
				<td>
					@(shirt.Price.HasValue? shirt.Price.Value.ToString("c"):"")
				</td>
				<td>
					<a class="btn btn-link" asp-controllers="shirt" asp-action="updateshirt"
						asp-route-shirtId="@shirt.ShirtId">Edit</a>
				</td>
				<td>
					<a class="btn btn-link" asp-controllers="shirt" asp-action="deleteshirt"
						asp-route-shirtId="@shirt.ShirtId">delete</a>
				</td>
			</tr>
			}
		</tbody>

	</table>
	}
	<br>
	<a class="btn btn-primary" asp-controllers="shirt" asp-action="createshirt">Create</a>
